<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding16"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/BrowseCategoryStyle"
            android:text="@string/nowPlayingTitle" />

        <ImageView
            android:id="@+id/song_image_view"

            android:layout_width="match_parent"
            android:layout_height="@dimen/image150"
            android:gravity="center"
            android:src="@drawable/album_icon" />

        <TextView
            android:id="@+id/song"
            style="@style/BrowseCategoryStyle"
            android:gravity="center"
            android:text="@string/song1" />

        <TextView
            android:id="@+id/artist"
            style="@style/BrowseCategoryStyle"
            android:gravity="center"
            android:text="@string/artist1" />

        <TextView
            android:id="@+id/album"
            style="@style/BrowseCategoryStyle"
            android:gravity="center"
            android:text="@string/album1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/audioNavigationButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous_button"
            style="@style/buttonStyle"
            android:src="@drawable/rewind" />

        <ImageView
            android:id="@+id/play_pause_button"
            style="@style/buttonStyle"
            android:src="@drawable/pause" />

        <ImageView
            android:id="@+id/next_button"
            style="@style/buttonStyle"
            android:src="@drawable/next" />

    </LinearLayout>


</RelativeLayout>